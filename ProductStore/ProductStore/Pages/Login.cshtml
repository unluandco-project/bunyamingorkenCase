@page
@model ProductStore.Pages.LoginModel
@{
}
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">User Login</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-dark">
                </div>
                <div class="mb-3">
                    <input type="text" asp-for="Model.EmailAddress" class="form-control" placeholder="Email Address" />
                </div>
                <div class="mb-3">
                    <input type="password" asp-for="Model.Password" class="form-control" placeholder="Password" />
                </div>
                <div class="mb-3 form-check">
                    <label class="form-check-label" asp-for="Model.RememberMe">RememberMe</label>
                    <input type="checkbox" asp-for="Model.RememberMe" class="form-check-input" />
                </div>
                <div class="mb-3 ">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>

        </div>
    </div>
</div>
